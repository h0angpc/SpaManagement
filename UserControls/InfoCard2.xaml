<UserControl x:Class="SpaManagement.UserControls.InfoCard2"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             Name="infoCard">
    <Border Margin="4 0" Style="{StaticResource whiteBorder1}">
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ElementName=infoCard, Path=Image}" Width="30" Height="30" Margin="0 0 6 0"/>
                <TextBlock Text="{Binding ElementName=infoCard, Path=Title}" Style="{StaticResource titleText1}"/>
            </StackPanel>

            <TextBlock Text="{Binding ElementName=infoCard, Path=SubTitle}" Style="{StaticResource secondaryText}"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ElementName=infoCard, Path=Amount}" Style="{StaticResource valueText}"/>
                <TextBlock Text="đơn hàng" FontWeight="Bold" Margin="0 5 0 0" FontSize="24"/>
            </StackPanel>
        </StackPanel>


    </Border>
</UserControl>
